\setbeamercolor*{palette tertiary}{bg=white,fg=NLeSCCore}
\setbeamercolor*{palette quaternary}{fg=white,bg=NLeSCCore}

\setbeamercolor*{title}{fg=black,bg=NLeSCCore}
\setbeamercolor*{author}{fg=white,bg=NLeSCCore}
% \setbeamercolor*{institute}{parent=author}
\setbeamercolor*{date}{fg=black,bg=NLeSCCore}
