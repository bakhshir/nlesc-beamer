\setbeamercolor*{lower separation line head}{fg=white,bg=NLeSCCore}

\setbeamercolor*{special page canvas}{bg=NLeSCCore}
\setbeamercolor*{special page separator upper}{bg=NLeSCCore}
\setbeamercolor*{special page separator lower}{bg=NLeSCCore}
