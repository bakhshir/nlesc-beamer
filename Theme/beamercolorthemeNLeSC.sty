\usepackage{corecolours}


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Theme options and definitions
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\def\beamer@theme@base@blue{
  \definecolor{NLeSCCore}{named}{NLeSCCoreBlue}
}
\def\beamer@theme@base@black{
  \definecolor{NLeSCCore}{named}{NLeSCCoreBlack}
}
\def\beamer@theme@base@white{
  \definecolor{NLeSCCore}{named}{NLeSCCoreWhite}
}


\beamer@theme@base@blue
\DeclareOptionBeamer{base}{\csname beamer@theme@base@#1\endcsname}
\ProcessOptionsBeamer


